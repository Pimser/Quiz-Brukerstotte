<!-- Link to the main stylesheet -->
<link rel="stylesheet" href="/styles.css">
<title><%= title %></title>

<div class="header">
  <h1 class="quizzyHead"><a href="/">Quizzy</a></h1>
  <% if (user) { %>
    <span class="welcome-text">Welcome <%= user.username %></span>
    <div class="header-buttons">
      <a href="/quizzes/quizDashboard" class="button">Quiz Dashboard</a>
      <a href="/quizzes/createQuiz" class="button">Make Quiz</a>
      <a href="/auth/logout" class="button">Logout</a>
    </div>
  <% } else { %>
    <div class="header-buttons">
      <a href="/auth/login" class="button">Login</a>
      <a href="/auth/register" class="button">Register</a>
    </div>
  <% } %>
</div>